<table>
  <thead>
    <tr>
      <th>Song</th>
      <th>Artist</th>
      <th>YouTube</th>
      <th>Spotify</th>
<!--
      <th>Chord1st</th>
      <th>Chord2nd</th>
      <th>Chord3rd</th>
      <th>Chord4th</th>
-->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chords.each do |chord| %>
      <tr>
        <td><%= link_to(chord.song, chord.chord2nd) %></td>
        <td><%= chord.artist %></td>
        <td>
          <%= link_to(image_tag('youtube.svg', width: '25'), @youtube_url + chord.song + '+' + chord.artist) %>
        </td>
        <td>
          <%= link_to(image_tag('spotify.svg', width: '25'), @spotify_url + chord.song + '%20' + chord.artist) %>
        </td>
<!--
        <td><%= chord.chord1st %></td>
        <td><%= chord.chord2nd %></td>
        <td><%= chord.chord3rd %></td>
        <td><%= chord.chord4th %></td>ã€€
-->
        <td><%= link_to 'Show', chord %></td>
        <td><%= link_to 'Edit', edit_chord_path(chord) %></td>
        <td><%= link_to 'Destroy', chord, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

